<%- include("../include/header.ejs") %>

<body>
  <!-- Navbar -->
  <%- include("../include/navbar.ejs") %>

  <main class="container is-fluid">
    <div>
      <h1 class="title">Michi Pictures</h1>
      <h3 class="subtitle">Grid of Michi Pictures</h3>
    </div>

    <br />

    <div class="container">
      <div class="columns is-multiline">
        <% for (let i = 0; i < cards.length; i++) { %>
        <div class="column is-one-third">
          <div class="card">
            <div class="card-image">
              <figure class="image is-4by3">
                <img src="<%= cards[i].cardSrc %>" alt="Placeholder image" />
              </figure>
            </div>
            <div class="card-content">
              <p class="title is-4"><%= cards[i].cardTitle %></p>
              <p class="subtitle is-6"><%= cards[i].cardSubtitle %></p>
              <div class="content"><%= cards[i].cardContent %></div>
            </div>
          </div>
        </div>
        <% } %>
      </div>
    </div>
  </main>
</body>

<!-- Footer -->
<%- include("../include/footer.ejs") %>
